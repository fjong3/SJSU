<?xml version="1.0" encoding="UTF-8"?>
<project name="module_netty-pipe" default="compile.module.netty-pipe">
  <dirname property="module.netty-pipe.basedir" file="${ant.file.module_netty-pipe}"/>
  
  <property name="module.jdk.home.netty-pipe" value="${jdk.home.1.8}"/>
  <property name="module.jdk.bin.netty-pipe" value="${jdk.bin.1.8}"/>
  <property name="module.jdk.classpath.netty-pipe" value="jdk.classpath.1.8"/>
  
  <property name="compiler.args.netty-pipe" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="netty-pipe.output.dir" value="${module.netty-pipe.basedir}/classes"/>
  <property name="netty-pipe.testoutput.dir" value="${module.netty-pipe.basedir}/classes"/>
  
  <path id="netty-pipe.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="netty-pipe.module.production.classpath">
    <path refid="${module.jdk.classpath.netty-pipe}"/>
    <pathelement location="${basedir}/lib/jackson-all-1.8.5.jar"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
    <pathelement location="${basedir}/lib/netty-all-4.0.15.Final.jar"/>
    <pathelement location="${basedir}/lib/slf4j-api-1.7.2.jar"/>
    <pathelement location="${basedir}/lib/slf4j-simple-1.7.2.jar"/>
    <pathelement location="${basedir}/lib/protobuf-java-3.2.0.jar"/>
  </path>
  
  <path id="netty-pipe.runtime.production.module.classpath">
    <pathelement location="${netty-pipe.output.dir}"/>
    <pathelement location="${basedir}/lib/jackson-all-1.8.5.jar"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
    <pathelement location="${basedir}/lib/netty-all-4.0.15.Final.jar"/>
    <pathelement location="${basedir}/lib/slf4j-api-1.7.2.jar"/>
    <pathelement location="${basedir}/lib/slf4j-simple-1.7.2.jar"/>
    <pathelement location="${basedir}/lib/protobuf-java-3.2.0.jar"/>
  </path>
  
  <path id="netty-pipe.module.classpath">
    <pathelement location="${netty-pipe.output.dir}"/>
    <path refid="${module.jdk.classpath.netty-pipe}"/>
    <pathelement location="${basedir}/lib/jackson-all-1.8.5.jar"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
    <pathelement location="${basedir}/lib/netty-all-4.0.15.Final.jar"/>
    <pathelement location="${basedir}/lib/slf4j-api-1.7.2.jar"/>
    <pathelement location="${basedir}/lib/slf4j-simple-1.7.2.jar"/>
    <pathelement location="${basedir}/lib/protobuf-java-3.2.0.jar"/>
  </path>
  
  <path id="netty-pipe.runtime.module.classpath">
    <pathelement location="${netty-pipe.output.dir}"/>
    <pathelement location="${basedir}/lib/jackson-all-1.8.5.jar"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
    <pathelement location="${basedir}/lib/netty-all-4.0.15.Final.jar"/>
    <pathelement location="${basedir}/lib/slf4j-api-1.7.2.jar"/>
    <pathelement location="${basedir}/lib/slf4j-simple-1.7.2.jar"/>
    <pathelement location="${basedir}/lib/protobuf-java-3.2.0.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.netty-pipe">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.netty-pipe">
    <patternset refid="excluded.from.module.netty-pipe"/>
  </patternset>
  
  <path id="netty-pipe.module.sourcepath">
    <dirset dir="${module.netty-pipe.basedir}">
      <include name="src"/>
      <include name="generated"/>
      <include name="test"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.netty-pipe" depends="compile.module.netty-pipe.production,compile.module.netty-pipe.tests" description="Compile module netty-pipe"/>
  
  <target name="compile.module.netty-pipe.production" depends="register.custom.compilers" description="Compile module netty-pipe; production classes">
    <mkdir dir="${netty-pipe.output.dir}"/>
    <javac2 destdir="${netty-pipe.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.netty-pipe}/javac">
      <compilerarg line="${compiler.args.netty-pipe}"/>
      <bootclasspath refid="netty-pipe.module.bootclasspath"/>
      <classpath refid="netty-pipe.module.production.classpath"/>
      <src refid="netty-pipe.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.netty-pipe"/>
    </javac2>
    
    <copy todir="${netty-pipe.output.dir}">
      <fileset dir="${module.netty-pipe.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.netty-pipe.basedir}/generated">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.netty-pipe.basedir}/test">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.netty-pipe.tests" depends="register.custom.compilers,compile.module.netty-pipe.production" description="compile module netty-pipe; test classes" unless="skip.tests"/>
  
  <target name="clean.module.netty-pipe" description="cleanup module">
    <delete dir="${netty-pipe.output.dir}"/>
    <delete dir="${netty-pipe.testoutput.dir}"/>
  </target>
</project>